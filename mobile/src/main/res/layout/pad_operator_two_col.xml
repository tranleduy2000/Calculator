<com.xlythe.calculator.material.view.CalculatorPadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pad_operator"
    style="@style/PadLayoutStyle.Operator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pad_operator_background_color"
    android:columnCount="2"
    android:rowCount="4"
    tools:ignore="HardcodedText"
    tools:showIn="@layout/fragment_basic_calculator">

    <Button
        android:id="@+id/op_div"
        style="@style/PadButtonStyle.Operator"
        android:text="@string/op_div" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/del"
        android:tint="@color/pad_button_text_color"
        style="@style/PadButtonStyle.Operator.Text"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/round_backspace_24" />

    <Button
        android:id="@+id/clr"
        style="@style/PadButtonStyle.Operator.Text"
        android:text="CLR"
        android:visibility="gone" />

    <Button
        android:id="@+id/op_mul"
        style="@style/PadButtonStyle.Operator"
        android:text="@string/op_mul" />

    <Space style="@style/PadButtonStyle.Operator" />

    <Button
        android:id="@+id/op_sub"
        style="@style/PadButtonStyle.Operator"
        android:text="@string/op_sub" />

    <Space style="@style/PadButtonStyle.Operator" />

    <Button
        android:id="@+id/op_add"
        style="@style/PadButtonStyle.Operator"
        android:text="@string/op_add" />

    <Button
        android:id="@+id/eq"
        style="@style/PadButtonStyle.Operator.Equals"
        android:text="=" />

</com.xlythe.calculator.material.view.CalculatorPadLayout>
